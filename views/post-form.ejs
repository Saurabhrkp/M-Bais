<title>Make new Post</title>
<script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>
<%- include('./partials/navbar') %>
<div class="container card bg-light shadow my-4">
  <form
    action="/admin/create"
    method="POST"
    enctype="multipart/form-data"
    class="row justify-content-center"
  >
    <div class="col p-4">
      <h1 class="text-center p-2">Create Post</h1>
      <div class="form-group">
        <label for="title">Title</label>
        <input
          type="text"
          name="title"
          class="form-control"
          id="title"
          placeholder="Enter Title here"
          required
        />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input
          type="text"
          name="description"
          class="form-control"
          id="description"
          placeholder="Enter description here"
          required
        />
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        <textarea
          name="body"
          id="body"
          class="form-control"
          required
          cols="30"
          rows="10"
        ></textarea>
      </div>
      <div class="row">
        <div class="form-group col">
          <label for="code">Code</label
          ><input
            type="text"
            name="code"
            class="form-control"
            id="code"
            placeholder="Enter Code here"
            required
          />
        </div>
        <div class="form-group col">
          <label for="tags">Tags</label>
          <input
            type="text"
            name="tagString"
            class="form-control"
            id="tags"
            placeholder="Enter tags here"
            required
          />
        </div>
      </div>
      <div class="form-group">
        <label for="photos">Photos</label>
        <div class="input-group mb-3">
          <div class="custom-file">
            <input
              type="file"
              multiple
              accept="image/*"
              name="photos"
              class="custom-file-input"
              id="photos"
              required
            />
            <label class="custom-file-label" for="photos">Choose Photos</label>
          </div>
        </div>
        <div class="row justify-content-center" id="preview"></div>
      </div>
      <div class="form-group">
        <label for="video">Video</label>
        <div class="input-group mb-3">
          <div class="custom-file">
            <input
              type="file"
              accept="video/*"
              name="video"
              class="custom-file-input"
              id="video"
              required
            />
            <label class="custom-file-label" for="video">Choose Video</label>
          </div>
        </div>
      </div>
      <div class="">
        <label for="thumbnail">Thumbnail</label>
        <div class="input-group mb-3">
          <div class="custom-file">
            <input
              id="thumbnail"
              type="file"
              accept="image/*"
              name="thumbnail"
              class="custom-file-input"
              required
            />
            <label class="custom-file-label" for="thumbnail"
              >Choose Thumbnail</label
            >
          </div>
        </div>
        <div class="row justify-content-center" id="thumbnailPreview"></div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-outline-success mr-2">
          Submit
        </button>
        <button type="reset" class="btn btn-outline-danger">Cancel</button>
      </div>
    </div>
  </form>
</div>

<%-include('./partials/footer.ejs') %>
<script>
  CKEDITOR.replace('body');
</script>
