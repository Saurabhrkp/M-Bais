<title>List of Posts</title>
<div class="table-responsive py-5 mb-5">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Thumbnail</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Likes</th>
        <th scope="col">Delete</th>
        <th scope="col">Update</th>
      </tr>
    </thead>
    <tbody>
      <% for( let i = 0; i < posts.length; i++ ) { const post = posts[i] %>
      <tr>
        <th scope="row"><%=i%></th>
        <td style="width: 20rem; height: 2rem;">
          <a
            data-toggle="lightbox"
            data-gallery="gallery"
            href="<%= post.thumbnail.source %>"
          >
            <img
              src="<%= post.thumbnail.source %>"
              class="w-50"
              alt="<%= post.thumbnail.key %>"
            />
          </a>
        </td>
        <td><a href="/<%= post.slug%>"><%= post.title %></a></td>
        <td><%= post.description %></td>
        <td><%= post.likes.length %></td>
        <td>
          <form action="/admin/<%= post.slug%>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-outline-danger btn-sm">
              Delete
            </button>
          </form>
        </td>
        <td>
          <a
            type="button"
            href="/admin/<%= post.slug%>"
            class="btn btn-outline-warning btn-sm"
            >Edit</a
          >
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
