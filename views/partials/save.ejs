<div class="d-inline-block mr-3 mb-2">
  <% if (user.saved.includes(post.id)) { %>
  <form method="post" action="/<%=post.slug%>/save?_method=PUT">
    <input type="hidden" name="name" value="value" />
    <a onclick="this.parentNode.submit();" data-toggle="tooltip" title="Remove"
      ><svg
        class="bi bi-bookmark-fill"
        width="2.5em"
        height="2.5em"
        viewBox="0 0 16 16"
        fill="blue"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          d="M3 3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v12l-5-3-5 3V3z"
        /></svg
    ></a>
  </form>
  <% } else { %>
  <form method="post" action="/<%=post.slug%>/remove?_method=PUT">
    <input type="hidden" name="name" value="value" />
    <a onclick="this.parentNode.submit();" data-toggle="tooltip" title="Save"
      ><svg
        class="bi bi-bookmark-plus"
        width="2.5em"
        height="2.5em"
        viewBox="0 0 16 16"
        fill="currentColor"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          d="M4.5 2a.5.5 0 0 0-.5.5v11.066l4-2.667 4 2.667V8.5a.5.5 0 0 1 1 0v6.934l-5-3.333-5 3.333V2.5A1.5 1.5 0 0 1 4.5 1h4a.5.5 0 0 1 0 1h-4zm9-1a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13V1.5a.5.5 0 0 1 .5-.5z"
        />
        <path
          fill-rule="evenodd"
          d="M13 3.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z"
        /></svg
    ></a>
  </form>
  <% } %>
</div>
