<!--================Blog Area =================-->
<section class="blog_area section-padding">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 mb-6 mb-lg-0">
        <div class="blog_left_sidebar">
          <% if(files) { %> <% files.forEach(function(file) {%>
          <article class="blog_item">
            <div class="blog_item_img">
              <% if (file.isImage) { %>
              <img
                class="card-img rounded-0"
                src="./files/<%= file.name %>"
                alt="<%= file.name %>"
              />
              <%} else { %>
              <img
                class="card-img rounded-0"
                src="/img/blog/gif-for-video.gif"
                alt="<%= file.name %>"
              />
              <% } %>
              <a href="#" class="blog_item_date">
                <h3>
                  <% let date=new Date(files.metadata.timeCreated); %> <%=
                  date.toDateString() %>
                </h3>
              </a>
            </div>
            <div class="blog_details">
              <a class="d-inline-block" href="./view/<%= file.name %>">
                <h2><%= file.metadata.metadata.subject %></h2>
              </a>
              <p>
                <%= file.metadata.metadata.message %>
              </p>
              <ul class="blog-info-link"></ul>
            </div>
          </article>
          <%}) %> <% } else { %>
          <article class="blog_item">
            <div class="blog_details">
              <a class="d-inline-block" href="single-blog.html">
                <h2>404 No Post Found</h2>
              </a>
              <p>
                First Upload some post then come back to view.
              </p>
            </div>
          </article>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================Blog Area =================-->

